<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlanetActivity">

    <ImageView
        android:id="@+id/iv_item_planetImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_planetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_planetImg"
        tools:text="PLANET TITLE"/>

    <TextView
        android:id="@+id/tv_item_planetDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_planetTitle"
        tools:text="Odio est unde necessitatibus praesentium aliquid et sit corporis. Ducimus tenetur tenetur dolorum id optio. Nam voluptatibus dolorum eum."/>

</android.support.constraint.ConstraintLayout>